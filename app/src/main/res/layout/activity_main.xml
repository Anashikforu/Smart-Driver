<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#2FB1A4"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/orbitron_bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/Title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg_outlined"
        android:padding="15dp"
        android:text="Log In as Guest"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:fontFamily="@font/exo_bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="440dp"
        android:gravity="center_horizontal"
        android:text="or"
        android:textColor="#201E1E"
        android:textSize="15sp"
        app:fontFamily="@font/lekton" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/button1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg_outlined"
        android:padding="15dp"
        android:text="Log In as Admin"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:fontFamily="@font/exo_bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/button2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baumans"
        android:gravity="center_horizontal"
        android:text="Â© 2019 Merinasoft. All rights reserved. "
        android:textColor="#E91E63" />


</RelativeLayout>